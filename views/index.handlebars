<div class="container">
  <div class="row text-center">
    <div class="col">
      <img src="/assets/img/burger_explode.png" alt="exploding 3D burger" />
      <h1>Eat-da-Burger!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <ul>
  {{#each burgers}}
  {{#unless devoured}}
    <li>
        {{id}}. {{burger_name}}

        <button class="devour_it" data-id="{{id}}" data-devourit="true">
                Devour It!
        </button>
    </li>
  {{/unless}}
  {{/each}}
</ul>
    </div>
    <div class="col">
      <ul>
  {{#each burgers}}
  {{#if devoured}}
    <li>{{id}}. {{burger_name}}</li>
  {{/if}}
  {{/each}}
</ul>
    </div>   
  </div>
  <div class="row">
    <div class="col text-center">
      <form id="create-form">

  <div class="form-group">
    <input type="text" id="BurgerName" name="name">
  </div>

  <button type="submit">Submit</button>
  <p>Enter a burger you want to eat, then click the "Submit" button</p>
</form>
    </div>
  </div>
</div>